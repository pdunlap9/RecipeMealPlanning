@using Meal_planner.ViewModels;
@model AddRecipeViewModel;

<h1> Add a Recipe</h1>

<form method="post" asp-controller="Recipes" asp-action="AddRecipe">
    <div class="form-group">
        <label>Name of Recipe:</label><br />
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Category:</label><br />
        <select class="form-control" asp-for="CategoryId" asp-items="@Model.Category">
        </select>

    </div>

    <div class="form-group">
        <label>Ingredients :</label>


        <div>
            @foreach (var ingredient in Model.Ingredients)
            {
                <input type="checkbox" name="selectedIngredients" value="@ingredient.Id" />
                <label for="@ingredient.Id"> @ingredient.Name</label>
                <br />
                @*<label for="@ingredient.Quantity">@ingredient.Quantity</label>
                <label for="@ingredient.Measurement">@ingredient.Measurement</label>*@
            }


            <div> <a asp-controller="Ingredient" asp-action="Add"> Add Ingredient</a></div>

        </div>
    </div>

    @*<div class="form-group">
            <label asp-for="Instructions">Instructions:</label><br />
            <textarea asp-for="Instructions" name="Instructions" rows="9" cols="70"> </textarea>
            <span asp-validation-for="Instructions"></span>
        </div>
    *@


    @*<div class="form-group">
        <label for="photo">Photo(optional):</label><br />
        <input photo="photo" type="file" /><br /><br />
        </div>
    *@

    <input type="submit" value="Add Recipe" />



</form>