@model List<Meal_planner.Models.Recipe>


<div class="text-center">
    <h1 class="display-4">Recipes</h1>
    <p><a asp-controller="Recipe" asp-action="Add">Add a Recipe</a></p>
    <p><a asp-controller="AllRecipes" asp-action="Index">View All Recipes</a></p>
    <p><a asp-controller="Search" asp-action="Index">Search Recipes</a></p>
</div>



<table class="table">
    <tr>
        <th>Category</th>
        <th>Recipe</th>
    </tr>
    @foreach (Recipe recipe in Model)
    {
        <tr>
            <td><a asp-controller="Recipe" asp-action="Detail" asp-route-id="@recipe.Id">@recipe.Name</a></td>
            <td>@recipe.Category.Name</td>
        </tr>
    }
</table>

