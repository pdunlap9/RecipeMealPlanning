@using Meal_planner.Models
@model List<Recipe>



<h1>Recipes</h1>

<p>
    <a asp-controller="Recipes" asp-action="Add"> Add Recipe</a>
</p>


@if (Model.Count == 0)
{
    <p>No Recipes Yet!</p>
} else
{
    <table class="table">
        <tr>
            <th> ID</th>
            <th> Name</th>
            <th> Description</th>
        </tr>
        @foreach (var recipe in Model)
        {
    <tr>
        <td> @recipe.Id</td>
        <td> @recipe.Name</td>
        <td> @recipe.Description</td>
    </tr>
        }
    </table>
}

