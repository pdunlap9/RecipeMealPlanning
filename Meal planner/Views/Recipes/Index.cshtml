@model List<Meal_planner.Models.Recipe>


<div class="text-center">
    <h1 class="display-4">Recipes</h1>
    <p><a asp-controller="Recipes" asp-action="Add">Add a Recipe</a></p>
    @*<p><a asp-controller="Search" asp-action="Index">Search Recipes</a></p>*@
<p> <a asp-controller="Recipes" asp-action="Delete"> Delete Recipe </a></p>
</div>


@if (Model.Count == 0 || Model == null)
{
    <p>No Recipes Yet!</p>
}
else
{
<table class="table">
    <tr>
        <th>Category</th>
    </tr>
    @foreach (Recipe recipe in Model)
    {
        <tr>
            <td><a asp-controller="Recipes" asp-action="Detail" asp-route-id="@recipe.Id">@recipe.Name</a></td>
            <td>@recipe.Category.Name</td>
        </tr>
    }
</table>
}

