@model List<Meal_planner.Models.RecipeIngredient>

@if (Model.Count == 0)
{
    <h1>No recipes applicable</h1>
}
else
{
    <h1>Recipes with the Ingredient: @Model[0].Ingredient.Name</h1>

    <ul>
        @foreach (var recipeIngredient in Model)
        {
            <li>@recipeIngredient.Recipe.Name</li>
        }
    </ul>

}
