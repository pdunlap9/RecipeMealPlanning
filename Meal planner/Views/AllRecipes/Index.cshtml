<div class="container body-content">
    <h1>@ViewBag.title</h1>
    <h2 class="centered">View Recipes By Category</h2>
</div>

<table class="centeredTable">
    <tr>
        @foreach (var column in ViewBag.columns)
        {
            @if (column.Key != "all")
            {
                <th>@column.Value</th>
            }
        }
    </tr>
    <tr>
        @foreach (var category in ViewBag.tableChoices)
        {
            <td>
                <ul>
                    @if (category == "category")
                    {
                        @foreach (var item in ViewBag.categories)
                        {
                            <li>
                                <a asp-controller="AllRecipes" asp-action="Recipes" asp-route-column="@category" asp-route-value="@item.Name">@item.Name</a>
                            </li>
                        }
                    }
                    else
                    {
                        @foreach (var item in ViewBag.ingredients)
                        {
                            <li>
                                <a asp-controller="AllRecipes" asp-action="Recipes" asp-route-column="@category" asp-route-value="@item.Name">@item.Name</a>
                            </li>
                        }
                    }

                </ul>
            </td>
        }
    </tr>
</table>
